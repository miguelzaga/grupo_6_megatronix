<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/register.css">
    </head>

    <body>
        <%- include('../partials/header') %>
            <main>
                <section class="main-section">
                    <div class="container">
                        <h2>Registrar Cuenta</h2>
                        <hr>
                    </div>
                    <form id="register-form" action="/users/register" method="post" enctype="multipart/form-data">
                        <section id="personal-data" class="field-group">
                            <h3>Datos personales</h3>
                            <div>
                                <label for="firstName">Nombre</label>
                                <input value="<%= locals.old && old.firstName %>" type="text" name="firstName" id="firstName" placeholder="Nombre">
                                <% if (locals.errors && errors.firstName) { %>
                                    <p class="error-message">
                                        <%= errors.firstName.msg %>
                                    </p>
                                    <% } %>
                            </div>
                            <div>
                                <label for="lastName">Apellido</label>
                                <input value="<%= locals.old && old.lastName %>" type="text" name="lastName" id="lastName" placeholder="Apellido">
                                <% if (locals.errors && errors.lastName) { %>
                                    <p class="error-message">
                                        <%= errors.lastName.msg %>
                                    </p>
                                    <% } %>
                            </div>
                            <div>
                                <label for="email">Correo electrónico</label>
                                <input value="<%= locals.old && old.email %>" type="email" name="email" id="email" placeholder="Correo electrónico">
                                <% if (locals.errors && errors.email) { %>
                                    <p class="error-message">
                                        <%= errors.email.msg %>
                                    </p>
                                    <% } %>
                            </div>
                        </section>
                        <section id="establish-password" class="field-group">
                            <h3>Establecer contraseña</h3>
                            <div>
                                <label for="password">Contraseña</label>
                                <input type="password" name="password" id="password" placeholder="Contraseña">
                                <% if (locals.errors && errors.password) { %>
                                    <p class="error-message">
                                        <%= errors.password.msg %>
                                    </p>
                                    <% } %>
                            </div>
                            <div>
                                <label for="image">Imagen</label>
                                <input type="file" name="image" id="image">
                            </div>
                        </section>
                        <div class="olvidar">
                            <button id="send-register" type="submit">Registrarse</button>
                        </div>
                        <div class="olvidar">
                            <a id="olvidar" href="./login">Ya tienes una cuenta?</a>
                        </div>

                    </form>
                </section>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>