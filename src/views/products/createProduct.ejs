<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/createProduct.css">

    </head>

    <body>
        <%- include('../partials/header') %>
            <main>
                <section class="main-section">
                    <div class="container">
                        <h2>Agregar un producto</h2>
                        <hr>
                    </div>  
                    
                    <form id="registerForm" action="/products" method="post" enctype="multipart/form-data">
                        <div class="erroresCreaProduct">
                            <ul></ul>
                        </div>
                        <div class="atribut">
                            <label for="name">Nombre del producto</label>
                            <input required type="text" name="name" id="name" placeholder="">
                        </div>
                        <div class="atribut">
                            <label for="description_short">Descripción breve</label>
                            <input type="text" name="description_short" id="description_short" placeholder="">
                        </div>
                        <div class="atribut"> 
                            <label for="description_long">Descripción completa</label>
                            <textarea name="description_long" id="description_long" cols="30" rows="10"></textarea>
                        </div>
                        <div class="atribut">
                            <label for="category">Categoría</label>
                            <select name="product_category_id" id="category">
                                <option value="" selected disabled hidden>Escoja una categoría</option>
                                <% locals.categories.forEach(category=> { %>
                                    <option value="<%= category.id %>">
                                        <%= category.category %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="atribut">
                            <label for="category_sales">Promoción</label>
                            <select name="product_promotion_id" id="category_sales">
                                <option value="" selected disabled hidden>Escoja una promoción</option>
                                <% locals.promotions.forEach(promotion=> { %>
                                    <option value="<%= promotion.id %>">
                                        <%= promotion.promotion %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="atribut">
                            <label for="price">Precio</label>
                            <input required type="number" name="price" id="price" placeholder="100" min="0">
                        </div>
                        <div class="atribut">
                            <label for="image">Imagen</label>
                            <input type="file" name="image" id="image">
                        </div>

                        <div class="bottoms">
                            <a>
                                <button id="create">Crear</button>
                            </a>
                        </div>
                        <div class="bottoms">
                            <a>
                                <button type="reset">Borrar Datos Digitados </button>
                            </a>
                        </div>
                  
                    </form>
               
                </section>
            </main>
            <%- include('../partials/footer') %>
            <script src="/js/validadorCreaProduct.js"></script>
    </body>

</html>